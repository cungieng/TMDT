@model c2cWebsite.Models.customer

@{
    ViewBag.Title = "Tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ========================================= MAIN ========================================= -->

<main id="authentication" class="inner-bottom-md">
    <div class="container">
        <div class="row">

            <div class="col-md-6">
                <section class="section sign-in inner-right-xs">
                    <p class="bordered" style="font-size: xx-large; padding-bottom: 23px; color: #000000">Đăng nhập</p>
                    @using (Html.BeginForm("dangnhap", "TaiKhoan", FormMethod.Post, new { @class = "login-form cf-style-1" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="field-row">
                            <label>Tài khoản</label>
                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                        </div><!-- /.field-row -->

                        <div class="field-row">
                            <label>Mật khẩu</label>
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div><!-- /.field-row -->

                        <div class="field-row clearfix">
                            <span class="pull-left">
                                <label class="content-color"><input type="checkbox" class="le-checbox auto-width inline"> <span class="bold">Lưu mật khẩu</span></label>
                            </span>
                            <span class="pull-right">
                                <a href="#" class="content-color bold">Quên mật khẩu ?</a>
                            </span>
                        </div>

                        <div class="buttons-holder">
                            <button type="submit" class="le-button" >Đăng nhập</button>
                        </div><!-- /.buttons-holder -->
                    }<!-- /.cf-style-1 -->
                </section><!-- /.sign-in -->
            </div><!-- /.col -->

            <div class="col-md-6">
                <section class="section register inner-left-xs">
                    <p class="bordered" style="font-size: xx-large; padding-bottom: 23px; color: #000000">Đăng ký tài khoản mới</p>

                    <form role="form" class="register-form cf-style-1">
                        <div class="buttons-holder">
                            <button type="button" class="le-button" onclick="location.href='@Url.Action("dangky", "TaiKhoan")'">Đăng ký</button>
                            <button type="submit" class="le-button">Đăng ký trở thành Người bán hàng</button>
                        </div><!-- /.buttons-holder -->
                    </form>

                    <p class="bordered" style="font-size: xx-large; padding-bottom: 23px; color: #000000">Đăng ký ngay hôm nay để :</p>

                    <ul class="list-unstyled list-benefits">
                        <li><i class="fa fa-check primary-color"></i> Thanh toán nhanh chóng</li>
                        <li><i class="fa fa-check primary-color"></i> Theo dõi đơn đặt hàng của bạn dễ dàng</li>
                        <li><i class="fa fa-check primary-color"></i> Lưu giữ tất cả các giao dịch mua hàng của bạn</li>
                    </ul>

                </section><!-- /.register -->

            </div><!-- /.col -->

        </div><!-- /.row -->
    </div><!-- /.container -->
</main><!-- /.authentication -->
}
<!-- ========================================= MAIN : END ========================================= -->		